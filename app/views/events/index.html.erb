<h1>All Events</h1>

<h2>Previous Events</h2>
<ul>
  <% @prev_events.each do |event| %>
    <li><%= link_to event.location, event_path(event) %></li>
  <% end %>
</ul>

<h2>Upcoming Events</h2>
<ul>
  <% @upcoming_events.each do |event| %>
    <li><%= link_to event.location, event_path(event) %></li>
  <% end %>
</ul>