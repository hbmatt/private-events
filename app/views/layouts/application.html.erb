<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar">
      <% if session[:user_id] == nil %>
        <%= link_to "Sign In", login_url %>
      <% else %>
        <strong>Signed In:</strong> <%= link_to User.find(session[:user_id]).name, user_path(session[:user_id]) %> || 
        <%= link_to "Sign Out", logout_url %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
